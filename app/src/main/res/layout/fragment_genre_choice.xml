<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.GenreChoiceFragment"
    android:background="@color/white">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayoutGC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayoutGC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:minHeight="?attr/actionBarSize">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBarGC"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFFFFF"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIconTint="@color/primary_color"
                app:title="ジャンル選択"
                app:titleTextColor="@color/primary_color"
                app:titleCentered="true" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout"
        android:background="@color/primary_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="好きなことを選択してください"
            android:layout_margin="5dp"
            android:textColor="#696969"
            android:textSize="23dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="322dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="16dp">

                <!-- ボタンの大きさを変更し、カスタムスタイルを適用 -->
                <Button
                    android:id="@+id/button1"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@null"
                    android:text="運動" />

                <Button
                    android:id="@+id/button2"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="ゲーム" />

                <Button
                    android:id="@+id/button3"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="音楽" />

                <Button
                    android:id="@+id/button4"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="料理" />

                <Button
                    android:id="@+id/button5"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="旅行" />

                <Button
                    android:id="@+id/button6"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="歌う" />

                <Button
                    android:id="@+id/button7"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="映画" />

                <Button
                    android:id="@+id/button8"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="アニメ" />

                <Button
                    android:id="@+id/button9"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="漫画" />

                <Button
                    android:id="@+id/button10"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="SNS" />

                <Button
                    android:id="@+id/button11"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="外出" />

                <Button
                    android:id="@+id/button12"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="楽器" />

                <Button
                    android:id="@+id/button13"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="動物" />

                <Button
                    android:id="@+id/button14"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="お絵描き" />

                <Button
                    android:id="@+id/button15"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="クルマ" />

                <Button
                    android:id="@+id/button16"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="勉強" />

                <Button
                    android:id="@+id/button17"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="ダンス" />

                <Button
                    android:id="@+id/button18"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="物作り" />

                <Button
                    android:id="@+id/button19"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="賭け事" />

                <Button
                    android:id="@+id/button20"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="服装" />

                <Button
                    android:id="@+id/button21"
                    style="@style/CustomButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="84dp"
                    android:layout_columnWeight="1"
                    android:text="写真" />

            </GridLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="続ける"
                android:textColor="#47BEFF"
                android:textSize="25sp"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="3dp" />

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="すすむ"
                android:textColor="#47BEFF"
                android:textSize="25sp"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="3dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>